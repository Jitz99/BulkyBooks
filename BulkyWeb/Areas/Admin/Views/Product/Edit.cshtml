@model ProductVM
<div class=" card shadow border-0 my-4">
	<div class="card-header bg-secondary bg-gradient m-0 py-3">
	<div class="row">
		<div class="col-12 text-center">
			<h2 class="text-white py-2">Edit Product</h2>
		</div>
	</div>
	</div>
	<div class="card-body p-4">
		<form method="post">
			<input asp-for="Product.Id" hidden />
			<div class="border p-3 m-4">
				<div asp-validation-summary="ModelOnly"></div>
				<div class="mb-3 p-1" row>
					<input asp-for="Product.Title" class="form-control border-0 shadow" />
					<label asp-for="Product.Title" class="my-2"></label>
					<span asp-validation-for="Product.Title" class="text-bg-danger"></span>
				</div>
				<div class="mb-3 p-1" row>
					<input asp-for="Product.Description" class="form-control border-0 shadow" />
					<label asp-for="Product.Description" class="my-2"></label>
					<span asp-validation-for="Product.Description" class="text-bg-danger"></span>
				</div>
				<div class="mb-3 p-1" row>
					<input asp-for="Product.ISBN" class="form-control border-0 shadow" />
					<label asp-for="Product.ISBN" class="my-2"></label>
					<span asp-validation-for="Product.ISBN" class="text-bg-danger"></span>
				</div>
				<div class="mb-3 p-1" row>
					<input asp-for="Product.ListPrice" class="form-control border-0 shadow" />
					<label asp-for="Product.ListPrice" class="my-2"></label>
					<span asp-validation-for="Product.ListPrice" class="text-bg-danger"></span>
				</div>
				<div class="mb-3 p-1" row>
					<input asp-for="Product.Price50" class="form-control border-0 shadow" />
					<label asp-for="Product.Price50" class="my-2"></label>
					<span asp-validation-for="Product.Price50" class="text-bg-danger"></span>
				</div>
				<div class="mb-3 p-1" row>
					<input asp-for="Product.Price100" class="form-control border-0 shadow" />
					<label asp-for="Product.Price100" class="my-2"></label>
					<span asp-validation-for="Product.Price100" class="text-bg-danger"></span>
				</div>
				
				<div class="mb-3 p-1" row>
					<input asp-for="Product.Author" class="form-control border-0 shadow" />
					<label asp-for="Product.Author" class="my-2"></label>
					<span asp-validation-for="Product.Author" class="text-bg-danger"></span>
				</div>
				<div class="form-floating py-2 col-12" row>
					<select asp-for="Product.Category" asp-items="@Model.CategoryList" class="form-select border-0 shadow">
						<option disabled selected>--Select Category--</option>
					</select>
					<label asp-for="Product.Category" class="ms-2"></label>
				</div>
				<div class="row">
					<div class="col-6 col-md-3">
						<button type="submit" formmethod="post" class="btn btn-primary form-control">Update</button>
					</div>
					<div class="col-6 col-md-3">
						<a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary border form-control">
							Back to List
						</a>
					</div>
				</div>
			</div>
		</form>
	</div>
</div>


@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}


