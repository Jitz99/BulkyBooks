@page
@model Bulky_Razor.Pages.Categories.CreateModel


<form method=" ="post>
	<div class="border p-3 m-4">
		<h2 class="text-primary">Create Category</h2>
		<hr/>
		
		<div class="mb-3 p-1" row>	
			<label asp-for="Category.Name" class="p-0"></label>
			<input asp-for="Category.Name" class="form-control" />
			<span asp-validation-for="Category.Name" class="text-bg-danger"></span>
		</div>
		<div class="mb-3 p-1" row>
			<label asp-for="Category.DisplayOrder" class="p-0"></label>
			<input asp-for="Category.DisplayOrder" class="form-control" />
			<span asp-validation-for="Category.DisplayOrder" class="text-bg-danger"></span>
		</div>
		<div classs="row">
			<div class="col-6 col-md-3">
				<button type="submit" formmethod="post" class="btn btn-primary form-control">Create</button>
			</div>
			<div class="col-6 col-md-3">
				<a asp-page="/categories/index"  class="btn btn-outline-secondary border form-control">
					Back to List
				</a>
			</div>
		</div>
	</div>
</form>
@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}



