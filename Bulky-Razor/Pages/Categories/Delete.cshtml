@page
@model Bulky_Razor.Pages.Categories.DeleteModel
@(ViewContext.ClientValidationEnabled = true)
<form method=" =" post>
	<input asp-for="Category.Id" hidden />
	<div class="border p-3 m-4">
		<div class="row pb-2"
			<h2 class="text-primary">Edit Category</h2>
			<hr/>
		</div>
		<div asp-validation-summary="ModelOnly"></div>
		<div class="mb-3 p-1" row>
			<label asp-for="Category.Name" class="p-0"></label>
			<input asp-for="Category.Name" disabled class="form-control" />
			<span asp-validation-for="Category.Name"  class="text-bg-danger"></span>
		</div>
		<div class="mb-3 p-1" row>
			<label asp-for="Category.DisplayOrder" class="p-0"></label>
			<input asp-for="Category.DisplayOrder" disabled class="form-control" />
			<span asp-validation-for="Category.DisplayOrder" class="text-bg-danger"></span>
		</div>
		<div classs="row">
			<div class="col-6 col-md-3">
				<button type="submit" formmethod="post" class="btn btn-danger form-control">Delete</button>
			</div>
			<div class="col-6 col-md-3">
				<a asp-page="/categories/index"  class="btn btn-outline-secondary border form-control">
					Back to List
				</a>
			</div>
		</div>
	</div>
</form>



